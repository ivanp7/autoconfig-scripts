#!/bin/sh

cd -- "$(dirname -- "$0")"
./check && exit

id -u autoconfig-scripts > /dev/null 2>&1 || exit 1

DIR="$(sudo -u autoconfig-scripts mktemp -d -p /tmp "yay.XXXXXX")"
trap 'cd /tmp; rm -rf -- "$DIR"' EXIT

cd -- "$DIR"
sudo -u autoconfig-scripts git clone "https://aur.archlinux.org/yay.git" . || exit 1

HOME="$PWD" sudo --preserve-env=HOME -u autoconfig-scripts makepkg --noconfirm -Lsri

